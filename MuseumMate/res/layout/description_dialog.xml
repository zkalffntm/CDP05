<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B5ADA8" >

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="248dp"
        android:layout_height="208dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="39dp"
        android:background="#000000" />

    <ImageView
        android:id="@+id/cover_upper"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp"
        android:scaleType="fitStart"
        android:src="@drawable/description_cover_upper" />

    <ImageView
        android:id="@+id/cover_lower"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:scaleType="fitEnd"
        android:src="@drawable/description_cover_lower" />

    <ImageView
        android:id="@+id/exit_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="top|end"
        android:layout_margin="8dp"
        android:layout_marginEnd="3dp"
        android:src="@drawable/exit2" />

    <ImageView
        android:id="@+id/voice_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="top|start"
        android:layout_margin="7dp"
        android:layout_marginStart="3dp"
        android:src="@drawable/voice_on" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="261dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/txt_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/txt_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/txt_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/flip_left_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="140dp"
        android:layout_marginTop="125dp"
        android:background="#00000000"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/flip_left" />

    <ImageButton
        android:id="@+id/flip_right_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="140dp"
        android:layout_marginTop="125dp"
        android:background="#00000000"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/flip_right" />
    
</FrameLayout>
